<input type="password" name="password" id="password" value="">
		

			<a class="forget_href" href="/register/forget">Забыл пароль</a>
		

            <div class="floatR"><a id="id_login_form" class="button" onclick="submlogin_form();">
                    Войти
            </a></div>
            <script type="text/javascript">
				$(document).keydown(function(e) {
					if (e.keyCode == 13) {
						submlogin_form();
					}
				});
				
				function submlogin_form() {
					$.ajax({
						url: '/login/index',
						type: 'post',
						dataType: 'json',
						data: $('[name="login_form"]').serialize(),
						beforeSend: function() {
							$('#id_login_form').attr('onclick', '');
						},
						success: function(output) {
							if(output['success']) {
								location = output['success'];
							}else {
								parent = $('[name="login_form"]').parent();
								$('[name="login_form"]').remove();
								$(parent).prepend(output['form']);
							}
						}
					});
				}
			</script>
		</form>";